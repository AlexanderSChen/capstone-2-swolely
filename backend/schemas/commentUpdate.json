{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 1
        },
        "text": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1000
        }
    },
    "additionalProperties": false,
    "required": [
    "id", "text"
    ]
}
  