{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
    "id": {
        "type": "integer",
        "minimum": 1
    },
    "title": {
        "type": "string",
        "minLength": 1,
        "maxLength": 255
    },
    "description": {
        "type": "string",
        "minLength": 1,
        "maxLength": 255
    },
    "body": {
        "type": "string"
    },
    "votes": {
        "type": "integer",
        "minimum": 0
    }
    },
    "additionalProperties": false,
    "required": ["id", "title", "description"]
}
  